{
    "include": ["src"],
    "compilerOptions": {
        "target": "es2024",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "noImplicitOverride": true,
        "rewriteRelativeImportExtensions": true,
        "strictNullChecks": true
    }
}
